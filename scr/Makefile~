# The compiler (CC) is using g++
CXX = g++

# CFLAGS will be options passed to the compiler
CXXFLAGS = -c -Wall

all: RogueLetters

RogueLetters: Main.o Game.o
	$(CXX) Main.o Game.o -o RogueLetters
	
Main.o: Main.cpp Game.h
	$(CXX) $(CFLAGS) Main.cpp
	
Game.o: Game.h Game.cpp
	$(CXX) $(CFLAGS) Game.h Game.cpp
	
clean:
	rm *o RogueLetters
