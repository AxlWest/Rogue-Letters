#include "Player.h"
#include "InventorySlot.h"

#define NULL 0

void Player::Player(void)
{
	this->classType = 0 ;
	this->hp = 0 ;
	this->dodgeChance = 0 ;
	this->chanceToHit = 0 ;
	this->speed = 0 ;
	this->mana = 0 ;
	this->playerXLocation = 0 ;
	this->playerYLocation = 0 ;
	
	for(int i = 0 ; i < this->MAX_INVENTORY_SPACE ; i++)
	{
		this->inventory[i] = NULL ;
	}
}

